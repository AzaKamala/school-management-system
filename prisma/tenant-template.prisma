generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["{{SCHEMA_NAME}}"]
}

model User {
  id          String    @id @default(uuid())
  email       String    @unique
  password    String?
  firstName   String
  lastName    String
  role        String
  active      Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@schema("{{SCHEMA_NAME}}")
}